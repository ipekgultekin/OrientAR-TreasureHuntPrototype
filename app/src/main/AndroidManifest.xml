<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- İzinler -->
    <uses-permission android:name="android.permission.CAMERA"/>

    <!-- Donanım özellikleri -->
    <!-- Cihaz ARCore desteklemeli (uygulama AR’sız açılmasın istiyorsan required=true doğru) -->
    <uses-feature
        android:name="android.hardware.camera.ar"
        android:required="true"/>
    <!-- Arka/ön kamera şart değil -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OrientAR"
        tools:targetApi="31">

        <!-- SceneView’in manifestindeki optional değerle çakışmayı çözer -->
        <meta-data
            android:name="com.google.ar.core"
            android:value="required"
            tools:replace="android:value"/>

        <!-- Launch activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Scoreboard -->
        <activity
            android:name=".ScoreboardActivity"
            android:exported="false"
            android:label="Scoreboard"
            android:theme="@style/Theme.OrientAR"/>

        <!-- AR kamera -->
        <activity
            android:name=".TreasureHuntGameActivity"
            android:exported="false"
            android:label="Treasure Hunt Game"
            android:theme="@style/Theme.OrientAR"/>
    </application>
</manifest>
